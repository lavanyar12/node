<div class="alert bg-dark text-light text-center mt-2">
  Found {{count}} lessons for {{subject}} - Semester {{semester}}
</div>
{{#each lessons}}
<div class="card card-body">
  <h4 class="card-title">Notebook {{lessonId}} - {{title}}</h4>
  <ul class="list-group">
    <li class="list-group-item">
      <h6>Description:</h6>
      <p>{{description}}</p>
    </li>
    <li class="list-group-item">
      <h6>Video Title:</h6>
      <p>{{videoTitle}}</p>
    </li>
    <li class="list-group-item">
      <h6>Video Link:</h6>
      <p>{{videoLink}}</p>
    </li>
    <li class="list-group-item mb-1">
      <h6>Career Title:</h6>
      <p>{{careerTitle}}</p>
    </li>
    <li class="list-group-item">
      <h6>Career Link:</h6>
      <p></p>{{careerLink}}</p>
    </li>
    <li class="list-group-item">
      <h6>Movie Title:</h6>
      <p>{{movieTitle}}</p>
    </li>
    <li class="list-group-item">
      <h6>Movie Link:</h6>
      <p>{{movieLink}}</p>
    </li>
    <li class="list-group-item">
      <h6>Document Link:</h6>
      <p>{{documentLink}}</p>
    </li>
    <li class="list-group-item">
      <h6>Image Name:</h6>
      <p>{{image}}</p>
    </li>
  </ul>
</div>
<a class="btn btn-info btn-block mb-2" href="/lessons/edit/{{id}}">Edit</a>
<form method="post" action="/lessons/{{id}}?_method=DELETE" method="post">
  <input type="hidden" name=_method value="DELETE">
  <!--
  <input type="submit" class="btn btn-dark btn-block" value="Delete" data-toggle="modal" data-target="#myModal"> -->
  <!-- Trigger the modal with a button -->
  <button type="button" class="btn btn-danger btn-block" data-toggle="modal" data-target="#myModal">Delete</button>

  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Confirm</h4>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete this item?</p>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-default" id="modal-btn-yes">Yes</button>
          <button type="button" class="btn btn-primary" data-dismiss="modal" id="modal-btn-no">No</button>
        </div>

      </div>

  </div>
  </div>

</form>

{{else}}
<div class="alert bg-info text-light text-center mt-2">
  No lessons available for {{subject}} in Semester {{semester}}
</div>
{{/each}}