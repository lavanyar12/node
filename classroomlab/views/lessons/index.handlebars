<div class="alert bg-dark text-light text-center mt-2">
  Found {{count}} lessons for {{subject}} - Semester {{semester}}
</div>
{{#each lessons}}
<div class="card card-body">
  <h4 class="card-title">Notebook {{lessonId}} - {{title}}</h4>
  <ul class="list-group">
    <li class="list-group-item">
      <h6>Description:</h6>
      <p>{{description}}</p>
    </li>
    <li class="list-group-item">
      <h6>Video Title:</h6>
      <p>{{videoTitle}}</p>
    </li>
    <li class="list-group-item">
      <h6>Video Link:</h6>
      <p>{{videoLink}}</p>
    </li>
    <li class="list-group-item mb-1">
      <h6>Career Title:</h6>
      <p>{{careerTitle}}</p>
    </li>
    <li class="list-group-item">
      <h6>Career Link:</h6>
      <p></p>{{careerLink}}</p>
    </li>
    <li class="list-group-item">
      <h6>Movie Title:</h6>
      <p>{{movieTitle}}</p>
    </li>
    <li class="list-group-item">
      <h6>Movie Link:</h6>
      <p>{{movieLink}}</p>
    </li>
    <li class="list-group-item">
      <h6>Document Link:</h6>
      <p>{{documentLink}}</p>
    </li>
    <li class="list-group-item">
      <h6>Image Name:</h6>
      <p>{{image}}</p>
    </li>
  </ul>
</div>
<a class="btn btn-info btn-block mb-2" href="/lessons/edit/{{id}}">Edit</a>
<form method="post" action="/lessons/{{id}}?_method=DELETE" method="post">
  <input type="hidden" name=_method value="DELETE">
  <input type="submit" class="btn btn-dark btn-block" value="Delete">
</form>

{{else}}
<div class="alert bg-info text-light text-center mt-2">
  No lessons available to list
</div>
{{/each}}