{{#each subjects}}
<div class="card card-body mt-2">
  <br>
  <br>
  <h4>{{code}} - {{name}}</h4>
  <p>{{type}}</p>
  <p>{{description}}</p>
  <p>{{image}}</p>
  <p>{{folderLink}}</p>
</div>
<a class="btn btn-dark btn-block mb-2" href="/subjects/edit/{{id}}">Edit</a>
<form method="post" action="/subjects/{{id}}?_method=DELETE" method="post">
  <input type="hidden" name=_method value="DELETE">
  <input type="submit" class="btn btn-danger btn-block" value="Delete">
</form>

{{else}}
<p>No lessons available to list</p>
{{/each}}